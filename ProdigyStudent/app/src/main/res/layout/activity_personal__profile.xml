                    android:layout_below="@id/vsadhr"
                    android:id="@+id/r12"
                    android:layout_height="10dp"
                    android:background="@color/colorAccent" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
