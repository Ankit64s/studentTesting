                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:text="Teacher : "
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textStyle="italic"
                    android:textSize="25dp"
                    android:layout_below="@id/r8"
                    android:id="@+id/ss8"
                    android:textColor="#FF9800"/>

                <EditText
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/borderedittext"
                    android:textSize="28dp"
                    android:textStyle="italic"
                    android:textAlignment="center"
                    android:layout_below="@id/r8"
                    android:layout_toRightOf="@id/ss8"
                    android:id="@+id/vclsteach"
                    android:editable="false"
                    android:inputType="none"
                    android:layout_marginRight="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_below="@id/vclsteach"
                    android:id="@+id/r9"
                    android:layout_height="10dp"
                    android:background="@color/colorAccent" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:text="Fees : "
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textStyle="italic"
                    android:textSize="25dp"
                    android:layout_below="@id/r9"
                    android:id="@+id/ss9"
                    android:textColor="#FF9800"/>

                <EditText
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/borderedittext"
                    android:textSize="28dp"
                    android:textStyle="italic"
                    android:textAlignment="center"
                    android:layout_below="@id/r9"
                    android:layout_toRightOf="@id/ss9"
                    android:id="@+id/vfee"
                    android:editable="false"
                    android:inputType="none"
                    android:maxLength="20"
                    android:layout_marginRight="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_below="@id/vfee"
                    android:id="@+id/r10"
                    android:layout_height="10dp"
                    android:background="@color/colorAccent" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:text="Comments: "
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textStyle="italic"
                    android:textSize="24dp"
                    android:layout_below="@id/r10"
                    android:id="@+id/ss10"
                    android:textColor="#FF9800"/>

                <EditText
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/borderedittext"
                    android:textSize="28dp"
                    android:textStyle="italic"
                    android:textAlignment="center"
                    android:layout_below="@id/r10"
                    android:layout_toRightOf="@id/ss10"
                    android:id="@+id/vcomnts"
                    android:editable="false"
                    android:inputType="none"
                    android:layout_marginRight="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_below="@id/vcomnts"
                    android:id="@+id/r11"
                    android:layout_height="10dp"
                    android:background="@color/colorAccent" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:text="Adhaar : "
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textStyle="italic"
                    android:textSize="25dp"
                    android:layout_below="@id/r11"
                    android:id="@+id/ss11"
                    android:textColor="#FF9800"/>

                <EditText
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/borderedittext"
                    android:textSize="28dp"
                    android:textStyle="italic"
                    android:textAlignment="center"
                    android:layout_below="@id/r11"
                    android:layout_toRightOf="@id/ss11"
                    android:id="@+id/vsadhr"
